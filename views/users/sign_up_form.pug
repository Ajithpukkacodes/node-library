extends ../../views/layout

block content
  .row
    .col-md-12
      .main-card.mb-3.card
        .card-body
          h5.card-title= title
          form(method='POST' action='')
            include ../shared/_errors
            .position-relative.form-group
              label(for='user_name') User name:
              input#user_name.form-control(type='text', placeholder='user name (Christian)' name='user_name' required='true' value=(undefined===user ? '' : user.user_name) )
            .position-relative.form-group
              label(for='email') Email
              input#email.form-control(name='email', placeholder='Email', type='email' required='true' value=(undefined===user ? '' : user.email))
            .position-relative.form-group
              label(for='password') Password
              input#password.form-control(name='password', placeholder='*******', type='password')
            .position-relative.form-group  
              label(for='confirm-password') confirm password :
              input#confirm-password.form-control(type='password' placeholder='******' name='confirm-password')
            button.mt-1.btn.btn-primary Submit
